                "isDelivery",
                "name",
                "orders",
                "phoneNumber"
            ],
            "properties": {
                "address": {
                    "type": "string"
                },
                "floor": {
                    "type": "integer"
                },
                "isDelivery": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "orders": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/entities.OrderedMeals"
                    }
                },
                "phoneNumber": {
                    "type": "string"
                }
            }
        },
        "entities.OrderedMeals": {
            "type": "object",
            "required": [
                "id",
                "quantity"
            ],
            "properties": {
                "id": {
                    "type": "integer"
                },
                "quantity": {
                    "type": "integer"
                }
            }
        },
        "handler.Response": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "additionalProperties": {}
                },
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
